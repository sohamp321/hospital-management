<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Indian Institute of Technology Jodhpur</title>
</head>
<body>
    
    <div class="container">
        <h1 class="mb-4">IIT Jodhpur PHC</h1>
        <a href="/articles/new" class="'btn btn-success p-2 rounded">New Announcement</a>
        <a href="/quiz/new" class="'btn btn-success p-2 rounded">New Diagnosis</a>
        <h2 class="mb-4 mt-4">Announcement</h2>
        <% articles.forEach(element => {%>
            <div class="card mb-4 mt-4">
                <div class="card-body">
                    <div class="card-title"><%= element.title %></div>
                    <div class="card-subtitle text-muted mb-2">
                        <%= element.createdAt.toLocaleDateString()  %>
                    </div>
                    <div class="card-text mb-2"><%= element.description  %></div>
                    <a href="/articles/<%= element.slug  %>" class="btn btn-primary">Read More</a>
                    <form action="/articles/<%=element.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
                
            </div>


        <%}); %>
        <h2>Quizes</h2>
        <% quizes.forEach(element => {%>
            <div class="card mb-4 mt-4">
                <div class="card-body">
                    <div class="card-title"><%= element.title %></div>
                    <div class="card-subtitle text-muted mb-2">
                        <%= element.createdAt.toLocaleDateString()  %>
                    </div>
                    <div class="card-text mb-2"><%= element.description  %></div>
                    <a href="/quiz/<%= element.slug  %>" class="btn btn-primary">Read More</a>
                    <form action="/quiz/<%=element.id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
                
            </div>


        <%}); %>
    </div>
</body>
</html>