	<div class = "admin_main_cards_container">
        
		<h1 class="ann_head">Announcements</h1>
		<% let i=1 %>
        <% articles.forEach(element => {%>
            <div class="performance_cards" onclick=toggle_card(<%= i %>)>
				<div class="performance_card_box">
					<div class="performance_card_contents">
						<h2><%=i  %></h2>
						<h3 id="heading<%=i  %>"><%=element.title  %></h3>
						<p id="description<%=i  %>"><%=element.description  %>
						</p>
						<hr>
						<p style="display: none;" id="markdown<%= i %>"><%=element.markdown  %></p>
						<h5 id="createdBy<%=i  %>"> posted by ( <%=element.createdBy  %> )</h5>
						<p> on <%=element.createdAt.toLocaleDateString()  %></p>
						<a href="#">Click Here</a>
						<form action="/admin/<%=element.id %>?_method=DELETE" method="post" class="d-inline">
							<button type="submit" class="btn-dang">Delete	</button>
						</form>
					</div>
				</div>
			</div>
            <% i=i+1 %>


        <%}); %>
