    <div class = "hero_doctor">
        <div class="ann_head">Notices</div>
       
        <!-- Doctor's Notices -->
        <% let i=1 %>
        <% articles.forEach(element => {%>
            
            <div class="announcement_cards" >
                <h3 id="heading<%=i  %>"> <%=element.title  %></h3>
                <p id="description<%=i  %>"><%= element.description  %>
                </p>

                <p style="display: none;" id="markdown<%= i %>"><%=element.markdown  %></p>
                <p> <%=element.createdAt.toLocaleDateString()  %></p>
                <button class="mb-2" onclick=toggle_card(<%= i %>)>Open</button>
                <!-- <form action="/doctor/<%=result.slug  %>/<%=element.id  %>/announcement_delete?_method=DELETE" method="post">
                <button>Delete</button> -->
            </form>
                <span class="count_ann"><%=i  %></span>
            </div>
            <% i=i+1 %>


        <%}); %>

    
    <!-- <div class="quiz_head">Diagnosis</div> -->

    <!-- ! Isko Nahin Chhedna Hain -->
    <div class="leaderboard_doctor_quiz">
        <div class="leader_board_quiz_number_quiz">Available Items</div>
        <div class="leaderboard_score_card_head_quiz">
            <!-- <h5>Sr. No.</h5> -->
            <h5> &nbsp; &nbsp; &nbsp; Item ID &nbsp; &nbsp; &nbsp; </h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Item Name</h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Type of Item</h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Available Quantity</h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Price</h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Expiry Date</h5>
            <h5> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Manufacturer</h5>
        </div>
    <hr/>

    <% let k=1 %>
    <% inventoryItems.forEach(item => {%>
        <div class="leaderboard_score_card_entry_quiz" >
            <!-- <h6 class="patient_entry_sr_quiz"><%= k %></h6> -->
            <h6 class="patient_entry_name_quiz"><%=item.ItemID %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.Name %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.Type %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.Quantity %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.Price %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.ExpireDate %></h6>
            <h6 class="patient_entry_corr_quiz"><%=item.Manufacturer %></h6>
        </div>
            <%}); %>
            <% k=k+1 %>
    </div>



    <div class="popup_add_new_quiz" id="popup_1_add_new_quiz">
        <div class="overlay_add_new_quiz"></div>
        <div class="content_add_new_quiz">
            <div class="close_btn_add_new_quiz" onclick="togglepopup()">&times;</div>
            <h1>Create New Bill</h1>
            <form  action= "/diagnosis/pharmacist/<%=result.slug  %>/bill" method="post" id="annup"class = "input-group_add_ann">
                <!-- <form  action= "/diagnosis/receptionist/<%=result.slug  %>/new" method="post" id="annup"class = "input-group_add_ann"></form> -->
                <textarea name="dia_ID" class = "input-field_add_ann_title" cols="30" rows="30" placeholder="Diagnosis ID" ></textarea>
                <textarea name="item_ID" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Item ID" ></textarea>
                <textarea name="type" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Type" ></textarea>
                <textarea name="quantity" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Quantity" ></textarea>
                <textarea name="price" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Price" ></textarea>
                <textarea name="expiredate" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Expiry Date" ></textarea>
                <textarea name="Manufacturer" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Manufacturer" ></textarea>

                <!-- <textarea name="Doctor_ID" class = "input-field_add_ann" cols="30" rows="30" placeholder="Add Instructions" ></textarea> -->
                <button type="submit" class = "submit-btn_add_new_quiz">Publish as (<%=result.name  %>)</button>
            </form>
        </div>
    </div>


    <div class="popup_add_new_quiz" id="popup_1_add_new_quiz_2">
        <div class="overlay_add_new_quiz"></div>
        <div class="content_add_new_quiz">
            <div class="close_btn_add_new_quiz" onclick="togglepopup_2()">&times;</div>
            <h1>Add/Update Item</h1>
            <form  action= "/diagnosis/pharmacist/<%=result.slug  %>/item" method="post" id="annup"class = "input-group_add_ann">
                <!-- <form  action= "/diagnosis/receptionist/<%=result.slug  %>/new" method="post" id="annup"class = "input-group_add_ann"></form> -->
                <!-- <textarea name="dia_ID" class = "input-field_add_ann_title" cols="30" rows="30" placeholder="Diagnosis ID" ></textarea> -->
                <textarea name="item_ID" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Item ID" ></textarea>
                <textarea name="name" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Item Name" ></textarea>
                <textarea name="type" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Type" ></textarea>
                <textarea name="quantity" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Quantity" ></textarea>
                <textarea name="price" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Price" ></textarea>
                <textarea name="expiredate" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Expiry Date" ></textarea>
                <textarea name="Manufacturer" class = "input-field_add_ann_desc" cols="30" rows="30" placeholder="Manufacturer" ></textarea>

                <!-- <textarea name="Doctor_ID" class = "input-field_add_ann" cols="30" rows="30" placeholder="Add Instructions" ></textarea> -->
                <button type="submit" class = "submit-btn_add_new_quiz">Publish as (<%=result.name  %>)</button>
            </form>
        </div>
    </div>



    <div class="popup_view_card" id="popup_1_view_card">
        <div class="overlay_view_card"  onclick="toggle_card_close()"></div>
        <div class="content_view_card">
            <div class="close_btn_view_card" onclick="toggle_card_close()">&times;</div>
            <h1 id="heading_popup">Card Title</h1>
            <h3 id="description_popup">Card Description</h3>
