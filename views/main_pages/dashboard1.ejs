	document.addEventListener("DOMContentLoaded", () => {

		function counter(id, start, end, duration) {
			let obg = document.getElementByid(id),
				current = start,
				range = end - start,
				increment = end > start ? 1 : -1,
				step = math.abs(math.floor(duration / range)),
				timer = setinterval(() => {
					current += increment;
					obj.textContent = current;
					if (current == end) {
						clearinterval(timer);
					}
				}, step);
		}

